<MudCard>
	<MudStack Row="true">
		@if (SwapTextAndMedia)
		{
			@GetImageFragment()
			@GetTextFragment()
		}
		else
		{
			@GetTextFragment()
			<MudSpacer/>
			@GetImageFragment()
		}

	</MudStack>
</MudCard>

@code {

	[Parameter]
	public bool SwapTextAndMedia { get; set; } = false;

	private RenderFragment GetTextFragment() =>
		@<MudElement>
			<MudCardContent>
				<MudSkeleton Width="30%" Height="42px;"/>
				<MudSkeleton Width="80%"/>
				<MudSkeleton Width="100%"/>
			</MudCardContent>
			<MudCardActions>
				<MudSkeleton Width="64px" Height="40px" Class="ml-2"/>
				<MudSkeleton Width="105px" Height="40px" Class="ml-3"/>
			</MudCardActions>
		</MudElement>;

	private RenderFragment GetImageFragment() =>
		@<MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="400px" Width="400px"/>;

}
