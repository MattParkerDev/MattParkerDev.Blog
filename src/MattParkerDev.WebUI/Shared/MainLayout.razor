@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="_isDarkMode"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0">
        <MudText Typo="Typo.h6">MattParkerDev</MudText>
        <MudNavLink Href="" Match="NavLinkMatch.All" Color="Color.Inherit" IconColor="Color.Inherit" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
        <MudNavLink Href="about" Match="NavLinkMatch.Prefix" IconColor="Color.Inherit" Icon="@Icons.Material.Filled.Add">About</MudNavLink>
        <MudNavLink Href="portfolio" Match="NavLinkMatch.Prefix" IconColor="Color.Inherit" Icon="@Icons.Material.Filled.List">Portfolio</MudNavLink>
        <MudNavLink Href="blog" Match="NavLinkMatch.Prefix" IconColor="Color.Inherit" Icon="@Icons.Material.Filled.List">Blog</MudNavLink>
        <MudSpacer/>
        <MudTooltip Duration="1000" Text="@( _isDarkMode ? "Switch to Light Theme" : "Switch to Dark Theme")">
            <MudIconButton Icon="@( _isDarkMode ? @Icons.Material.Rounded.LightMode : @Icons.Material.Outlined.DarkMode)" Color="Color.Inherit" OnClick="@ToggleDarkMode"/>
        </MudTooltip>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/MattParkerDev" Target="_blank"/>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _isDarkMode = false;

    private void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
    }
}